<header class="main-header">
    <div class="main-header-top-bar">
        <a href="/"><img src="/images/Logo.png" alt ="logo de En Movimiento"  class="logo"></a>
        <form action="/" method="POST"class="form-busqueda">
            <input type="text" placeholder="Search.." class="barra-busqueda"><button type="submit"><i class="fas fa-search busqueda"></i></button>
        </form>
        <div class="right-top-header">
            <ul>
                <li><% if (locals.isLogged) { %>
                    <a href="/productos"><i class="fas fa-user-cog"></i></a>
                <% } %>
                </li>
                <li><% if (locals.isLogged) { %>
                    <a href="/users/profile"><img src="/images/usuarios/<%= locals.userLogged.image %>" width="40" style="border-radius: 100%;"></a>
                    <h3><%= locals.userLogged.name %></h3>
                            <% } else { %>                
                    <a href="/users/login"><i class="fas fa-user"></i></a>                
                <% } %>
                </li>
                <li><% if (!locals.isLogged) { %>
                    <a href="/productos/carrito"><i class="fas fa-shopping-cart carrito"></i></a>
                <% } %>
                </li>
                <li>    <a href="/users/logout"><i class="fas fa-sign-out-alt"></i></a>
                </li>
            </ul>
        </div>
    </div>
    <nav class="main-nav-bar">
            <ul>
                <% for( let i = 0;  i < locals.marcas.length; i++ ) { %> 
                <li><a href="/marca/<%= locals.marcas[i].id%>"><%= locals.marcas[i].name.toUpperCase() %></a></li>
                <% } %>
            </ul>
    </nav> 
    <div><i class="fas fa-bars burger"></i>
    </div>
    <script src="/js/header.js"></script> 
</header>